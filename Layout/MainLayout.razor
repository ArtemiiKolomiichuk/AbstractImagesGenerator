@inherits LayoutComponentBase
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap');

    *{
        font-family: 'Outfit', sans-serif;
    }

    input[type="color"] {
        appearance: none;
        border: none;
        cursor: pointer;
        background: none;
        transition: background-color 0.3s ease-out;
    }

    input[type="color"]::-webkit-color-swatch {
        border: none;
        transition: background-color 0.3s ease-out;
    }

    input[type="color"]::-moz-color-swatch {
        border: none;
        transition: background-color 0.3s ease-out;
    }

    .bttn {
        border-radius: 0.6em;
        background-color: #eaeaea;
        box-shadow: initial;
        box-shadow: 1px 2px 1px 0px #0000003d;
        outline: none;
        padding: 10px 20px;
        border: none;
        font-size: 1.3em;
        min-width: 5em;
        transition: background-color 0.4s;
    }

        .bttn:hover {
            background-color: #dfdfdf;
        }

    .filled {
        background-color: #2daa9e;
        color: white;
    }

        .filled:hover {
            background-color: #1f766e;
        }

    .secondary {
        background-color: #e3d2c3;
        color: white;
    }

    .secondary:hover {
        background-color: #d1c0b1;
    }

    .icon-button {
        border-radius: 0.4em;
        background-color: none;
        transition: background-color 0.4s;
    }

    .icon-button.red:hover {
        background-color: #f0627040;
    }

    .icon-button.violet:hover {
        background-color: #7160e840;
    }

    .icon-button.grey:hover {
        background-color: #75757540;
    }

    .pink {
        fill: mediumvioletred;
        background-color: #7160e800;
    }

    .pink:hover {
        background-color: #e551bf40;
    }

    .color-input-block {
        margin: 0.4rem;
        width: 3rem;
        height: 3rem;
        border-color: white;
        background-color: none;
    }

    .color-input-row {
        margin: 0.4rem;
        width: 6rem;
        height: 2.4rem;
        border-color: white;
        background-color: none;
    }

    


    .sortable-ghost {
        visibility: hidden;
    }

    .sortable-fallback {
        opacity: 1 !important
    }

    .inner-list {
        min-width: 35vw;
        display: flex;
        flex-direction: column;
        align-items: center;
        max-height: 60vh;
        overflow: auto;
    }

    .layer-card {
        background-color: #f5f5f5;
        border-radius: 0.4em;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
        width: -webkit-fill-available;
        width: -moz-available;
        padding: 5px;
    }

    

    @@media screen and (orientation:portrait) {
        .image-block {
            flex-direction: column;
        }

        .layers-list {
            width: 70%;
            max-height: 50vh;
        }

        #main-img {
            width: 70vw !important
        }
    }
</style>

@Body
