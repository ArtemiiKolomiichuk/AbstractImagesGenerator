@inherits LayoutComponentBase
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap');

    *{
        font-family: 'Outfit', sans-serif;
    }

    input[type="color"] {
        appearance: none;
        border: none;
        cursor: pointer;
        background: none;
        transition: background-color 0.3s ease-out;
    }

    input[type="color"]::-webkit-color-swatch {
        border: none;
        transition: background-color 0.3s ease-out;
    }

    input[type="color"]::-moz-color-swatch {
        border: none;
        transition: background-color 0.3s ease-out;
    }

    .bttn {
        border-radius: 0.6em;
        background-color: #eaeaea;
        box-shadow: initial;
        box-shadow: 1px 2px 1px 0px #0000003d;
        outline: none;
        padding: 10px 20px;
        border: none;
        font-size: 1.3em;
        min-width: 5em;
        transition: background-color 0.4s;
    }

        .bttn:hover {
            background-color: #dfdfdf;
        }

    .filled {
        background-color: #2daa9e;
        color: white;
    }

        .filled:hover {
            background-color: #1f766e;
        }

    .secondary {
        background-color: #e3d2c3;
        color: white;
    }

    .secondary:hover {
        background-color: #d1c0b1;
    }

    .icon-button {
        border-radius: 0.4em;
        background-color: none;
        transition: background-color 0.4s;
    }

    .icon-button.red:hover {
        background-color: #f0627040;
    }

    .icon-button.violet:hover {
        background-color: #7160e840;
    }

    .icon-button.grey:hover {
        background-color: #75757540;
    }

    .pink {
        fill: mediumvioletred;
        background-color: #7160e800;
    }

    .pink:hover {
        background-color: #e551bf40;
    }

    .color-input-block {
        margin: 0.4rem;
        width: 3rem;
        height: 3rem;
        border-color: white;
        background-color: none;
    }

    .color-input-row {
        margin: 0.4rem;
        width: 6rem;
        height: 2.4rem;
        border-color: white;
        background-color: none;
    }

    


    .sortable-ghost {
        visibility: hidden;
    }

    .sortable-fallback {
        opacity: 1 !important
    }

    .inner-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow: auto;
        /* background: #ebe9fc; */
        border-radius: 0.4em;
        margin: 0.5rem 0.3rem 0rem 3rem;
        /* border: solid #c6c2e9; */
    }

    .inner-list.first {
        max-height: 60vh;
    }

    .inner-list::-webkit-scrollbar {
        width: 0.7rem;
    }

    .inner-list::-webkit-scrollbar-track {
        background-color: #e7e7e7;
    }

    .inner-list::-webkit-scrollbar-thumb {
        border-radius: 1rem;
        border: 3px solid transparent;
        background-clip: content-box;
        background-color: #bdbdbd;
    }
    

    .layer-card {
        /* background-color: #f5f5f5; */
        border-radius: 0.4em;
        /* margin-right: 0.5rem;
        margin-bottom: 0.5rem; */
        margin-bottom: 0.2rem;
        padding-right: 0.5rem;
        padding-top: 0.2rem;
        border: solid #d6d2f3;
        background: #ebe9fc;
        width: -webkit-fill-available;
        width: -moz-available;
        padding-bottom: 0.2rem;
    }

    .settings{
        padding: 0.2em 0 0.2em 3em;
    }

    .blend-settings{
        padding-left: 3em;
        padding-top: 0.5em;
    }

    .card-header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 2px 0;
    }

    .blending{
        border: solid #efc9d1 !important;
        background: #f8e5e9;
    }

    @@media screen and (orientation:portrait) {
        .image-block {
            flex-direction: column;
        }

        .layers-list {
            width: 70%;
            max-height: 50vh;
        }

        #main-img {
            width: 70vw !important
        }
    }
</style>
<style>
    .dropbtn {
        background-color: #4fad53;
        color: white;
        padding: 0.5rem 0.9rem;
        font-size: 16px;
        border: none;
        cursor: pointer;
        margin-bottom: 0.5rem;
        border-radius: 0.9rem;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: fixed;
        background-color: #f9f9f9;
        min-width: -webkit-fit-content;
        min-width: -moz-fit-content;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

    .dropdown-content button {
        width: -webkit-fill-available;
        width: -moz-available;
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        overflow: auto;
    }

    .dropdown-content button:hover {
        background-color: #f1f1f1
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }

    .option {
        padding-left: 1rem;
        border-radius: 0.4em;
        transition: background-color 0.2s;
        -webkit-user-select: none;
    }

    .option:hover {
        background-color: #ededed;
        cursor: default;
    }

    .key {
        -webkit-user-select: none;
    }

    .l-1 {
        margin-left: 3px;
    }
</style>
@Body
